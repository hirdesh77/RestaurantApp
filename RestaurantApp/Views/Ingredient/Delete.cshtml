@model Ingredient
@{
    ViewBag.Title = $"Delete {Model.Name} Ingredient";
}
<h3 class="text-center mb-4">Are you sure you want to delete this ingredient?</h3>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm border-light">
            <div class="card-body">
                <!-- Display Ingredient Details -->
                <div class="mb-4">
                    <h4><strong>Ingredient Name:</strong> @Model.Name</h4>
                </div>

                <!-- Delete Confirmation Form -->
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="IngredientId" />
                    <div class="text-center">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        <a asp-action="Index" class="btn btn-secondary btn-sm ml-3">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Add custom CSS for better styling -->
<style>
    .card {
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
    }

    .btn {
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

        .btn:hover {
            transform: scale(1.05);
        }

    .btn-danger:hover {
        background-color: #c82333; /* Darker red for hover */
    }

    .btn-secondary:hover {
        background-color: #6c757d; /* Darker gray for hover */
    }

    .mb-4 {
        margin-bottom: 1.5rem;
    }

    h4 {
        font-weight: 300;
    }

    p {
        font-size: 16px;
        line-height: 1.5;
    }
</style>
